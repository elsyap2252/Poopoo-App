<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".StatisticActivity">

    <!-- JUDUL DI LUAR SCROLLVIEW -->
    <TextView
        android:id="@+id/titleStatistic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Statistic of This Week"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="12dp"
        android:textColor="#000000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#CCCCCC"
        android:layout_marginBottom="8dp" />

    <!-- ISI YANG BISA DISCROLL -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <!-- BAR CHART -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time of Day"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"/>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#F0F0F0"
                android:elevation="6dp" />

            <!-- PIE SHAPE -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Poop Shape Distribution"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"/>

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChartShape"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#F0F0F0"
                android:elevation="6dp" />

            <!-- PIE SIZE -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Poop Size Distribution"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"/>

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChartSize"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#F0F0F0"
                android:elevation="6dp" />

            <!-- PIE COLOR -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Poop Color Distribution"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"/>

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChartColor"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#F0F0F0"
                android:elevation="6dp" />

        </LinearLayout>
    </ScrollView>

    <!-- NAVBAR TETAP DI BAWAH -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navbar_menu"
        app:labelVisibilityMode="labeled"/>
</LinearLayout>